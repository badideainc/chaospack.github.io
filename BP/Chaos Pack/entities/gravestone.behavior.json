{
  "format_version": "1.12.0",
  "minecraft:entity": {
    "description": {
      "identifier": "chaospack:gravestone",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "chaospack:despawn": {
        "minecraft:despawn": {
        }
      }
    },

    "components": {
      "minecraft:type_family": {
        "family": [ "minecart", "inanimate", "gravestone" ]
      },
      "minecraft:collision_box": {
        "width": 1,
        "height": 0.5
      },
      "minecraft:inventory": {
        "container_type": "inventory",
        "inventory_size": 27,
        "can_be_siphoned_from": false
      },
      "minecraft:health": {
        "value": 10,
        "max": 10
      },
      "minecraft:nameable": {},

      "minecraft:item_hopper": {
      },

      // Knockback resistance is needed to make it not be Knocked off by an entity.
      "minecraft:knockback_resistance": {
        "value": 1
      },
      // Tells if the entity can be pushed or not.
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      // Sets the distance through which the entity can push through.
      "minecraft:push_through": {
        "value": 1
      },

      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "test": "is_family",
                "subject": "other",
                "value": "player"
              }
            },
            "deals_damage": true
          },
          {
            "deals_damage": false,
            "cause": "all"
          }
        ]
      },

      "minecraft:fire_immune": {
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0,
        "breathes_air": true,
        "breathes_water": true
      },
      "minecraft:physics": {
        "has_gravity": false,
        "has_collision": false
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "queue_command": {
              "command": [
                "tp @e[type=item,r=7] ~ ~ ~"
              ]
            }
          }
        ]
      },
      "chaospack:despawn": {
        "add": {
          "component_groups": [ "chaospack:despawn" ]
        }
      }
    }

  }
}

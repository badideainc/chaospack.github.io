{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "chaospack:soul_spirit",
			"runtime_identifier": "minecraft:allay",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
			"minecraft:exploding": {
				"minecraft:explode": {
					"fuse_length": 0.5,
					"fuse_lit": true,
					"power": 1,
					"causes_fire": false,
					"destroy_affected_by_griefing": false,
					"breaks_blocks": false
				}
			}
		},
		"components": {
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:type_family": {
				"family": [ "nether", "mob" ]
			},
			"minecraft:collision_box": {
				"width": 0.35,
				"height": 0.6
			},
			"minecraft:balloonable": {
				"mass": 0.5
			},
			"minecraft:breathable": {
				"totalSupply": 15,
				"suffocateTime": 0
			},
			"minecraft:attack": {
				"damage": 3
			},
			"minecraft:nameable": {},
			"minecraft:health": {
				"value": 1
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"on_damage": {
							"filters": {
								"all_of": [
									{
										"test": "is_family",
										"subject": "other",
										"value": "player"
									},
									{
										"test": "is_owner",
										"subject": "other",
										"value": true
									}
								]
							}
						},
						"deals_damage": false
					}
				]
			},
			"minecraft:target_nearby_sensor": {
				"inside_range": 2.5,
				"outside_range": 6.0,
				"must_see": true,
				"on_inside_range": {
					"event": "minecraft:start_exploding",
					"target": "self"
				},
				"on_outside_range": {
					"event": "minecraft:stop_exploding",
					"target": "self"
				},
				"on_vision_lost_inside_range": {
					"event": "minecraft:stop_exploding",
					"target": "self"
				}
			},
			"minecraft:on_target_escape": {
				"event": "minecraft:stop_exploding",
				"target": "self"
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 1,
				"must_see": true,
				"must_see_forget_duration": 3.0,
				"entity_types": [
					{
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "player"
						},
						"max_dist": 32
					}
				]
			},
			"minecraft:movement": {
				"value": 0.2
			},
			"minecraft:flying_speed": {
				"value": 0.2
			},
			"minecraft:navigation.hover": {
				"can_path_over_water": true,
				"can_sink": false,
				"can_pass_doors": false,
				"can_path_from_air": true,
				"avoid_water": true,
				"avoid_damage_blocks": true,
				"avoid_sun": false
			},
			"minecraft:fire_immune": {
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:movement.hover": {},
			"minecraft:jump.static": {},
			"minecraft:can_fly": {},

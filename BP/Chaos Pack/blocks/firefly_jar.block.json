{
	"format_version": "1.20.20",
	"minecraft:block": {
		"description": {
			"identifier": "chaospack:firefly_jar",
			"menu_category": {
				"category": "items",
				"group": "itemGroup.name.jar"
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": [ "minecraft:cardinal_direction", "minecraft:facing_direction" ]
				}
			}
		},
		"components": {
			"minecraft:collision_box": {
				"origin": [ -4, 0, -4 ],
				"size": [ 8, 8, 8 ]
			},
			"minecraft:selection_box": {
				"origin": [ -4, 0, -4 ],
				"size": [ 8, 8, 8 ]
			},
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 0.4
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 0
			},
			"minecraft:geometry": "geometry.firefly_jar",
			"minecraft:material_instances": {
				"*": {
					"texture": "firefly_jar",
					"render_method": "alpha_test"
				}
			},
			"minecraft:light_emission": 15,
			"minecraft:light_dampening": 0,
			"minecraft:map_color": "#cccccc"
		},
		"permutations": [
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'north' && q.block_state('minecraft:facing_direction') == 'up' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 180, 0 ],
						"translation": [ 0, 0.44, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'south' && q.block_state('minecraft:facing_direction') == 'up' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 0, 0 ],
						"translation": [ 0, 0.44, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'east' && q.block_state('minecraft:facing_direction') == 'up' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 90, 0 ],
						"translation": [ 0, 0.44, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'west' && q.block_state('minecraft:facing_direction') == 'up' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 270, 0 ],
						"translation": [ 0, 0.44, 0 ]
					}
				}
			},

			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'north' && q.block_state('minecraft:facing_direction') == 'down' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 180, 0 ],
						"translation": [ 0, 0, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'south' && q.block_state('minecraft:facing_direction') == 'down' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 0, 0 ],
						"translation": [ 0, 0, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'east' && q.block_state('minecraft:facing_direction') == 'down' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 90, 0 ],
						"translation": [ 0, 0, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'west' && q.block_state('minecraft:facing_direction') == 'down' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 270, 0 ],
						"translation": [ 0, 0, 0 ]
					}
				}
			}
		]
	}
}
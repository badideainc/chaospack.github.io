{
	"format_version": "1.20.20",
	"minecraft:block": {
		"description": {
			"identifier": "chaospack:parking_space",
			"menu_category": {
				"category": "construction",
				"group": "itemGroup.name.road"
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": [ "minecraft:cardinal_direction" ]
				},
				"minecraft:placement_position": {
					"enabled_states": [ "minecraft:vertical_half" ]
				}
			}
		},
		"components": {
			"minecraft:collision_box": {
				"origin": [ -4, 0, -8 ],
				"size": [ 8, 1, 16 ]
			},
			"minecraft:selection_box": {
				"origin": [ -4, 0, -8 ],
				"size": [ 8, 1, 16 ]
			},
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 1
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 30
			},
			"minecraft:geometry": "geometry.parking_space",
			"minecraft:material_instances": {
				"*": {
					"texture": "parking_space",
					"render_method": "opaque"
				}
			},
			"minecraft:map_color": "#ffffff"
		},
		"permutations": [
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'north' && query.block_state('minecraft:vertical_half') == 'top' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 180, 0 ],
						"translation": [ 0, -0.5, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'south' && query.block_state('minecraft:vertical_half') == 'top' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 0, 0 ],
						"translation": [ 0, -0.5, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'east' && query.block_state('minecraft:vertical_half') == 'top' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 90, 0 ],
						"translation": [ 0, -0.5, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'west' && query.block_state('minecraft:vertical_half') == 'top' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 270, 0 ],
						"translation": [ 0, -0.5, 0 ]
					}
				}
			},

			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'north' && query.block_state('minecraft:vertical_half') == 'bottom' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 180, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'south' && query.block_state('minecraft:vertical_half') == 'bottom' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 0, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'east' && query.block_state('minecraft:vertical_half') == 'bottom' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 90, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'west' && query.block_state('minecraft:vertical_half') == 'bottom' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 270, 0 ]
					}
				}
			}
		]
	}
}
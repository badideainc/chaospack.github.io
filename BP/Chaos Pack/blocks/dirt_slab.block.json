{
	"format_version": "1.20.20",
	"minecraft:block": {
		"description": {
			"identifier": "chaospack:dirt_slab",
			"menu_category": {
				"category": "construction",
				"group": "itemGroup.name.slab"
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": [ "minecraft:facing_direction" ]
				}
			}
		},
		"components": {
			"minecraft:collision_box": {
